FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         2000;

deltaT          1;

writeControl    timeStep;

writeInterval   100;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    #includeFunc streamlines
    avgInlets
    {
        type               surfaceFieldValue;
        functionObjectLibs (fieldFunctionObjects);
        fields             (p);
        operation          areaAverage;
        regionType         patch;
        name               inlet;
        writeFields        true;
        surfaceFormat      none;
    }
}


