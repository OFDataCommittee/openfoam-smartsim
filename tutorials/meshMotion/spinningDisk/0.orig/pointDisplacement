FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    outlet
    {
        type            fixedValue;
        value           $internalField;
    }

    cylinder
    {
        type        solidBodyMotionDisplacement;
        solidBodyMotionFunction  multiMotion;
        // @todo: check displacement configuration
        // @body: had to set `multiMotionCoeffs.solidBodyMotionFunction` to `linearMotion` for things to work
        multiMotionCoeffs
        {
            solidBodyMotionFunction  linearMotion;
            translation
            {
                solidBodyMotionFunction  linearMotion;
                linearMotionCoeffs
                {
                    velocity   (0.1 0.05 0);
                }
            }
            rotation
            {
                solidBodyMotionFunction rotatingMotion;
                rotatingMotionCoeffs
                {
                    origin      (0 0 0);
                    axis        (0 0 1);
                    omega       0.1; // rad/s, 1rad/s=9.5rpm
                }
            }
        }
        oscillatingRotatingMotionCoeffs
        {
            origin      (0 0 0);
            axis        (0 0 1);
            omega       2;          // rad/s, 1rad/s=9.5rpm
            amplitude   (0 0 20);    // max amplitude (degrees)
        }
    }

    walls
    {
        type            fixedValue;
        value           $internalField;
    }

    frontAndBack
    {
        type            empty;
    }

}


// ************************************************************************* //
